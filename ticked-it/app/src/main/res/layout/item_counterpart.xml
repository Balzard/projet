<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="5dp"
    android:background="@drawable/button_green"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="3dp">

            <TextView
                android:layout_width="@dimen/text_counter_width"
                android:layout_height="wrap_content"
                android:id="@+id/item_ticket_name"
                android:text="            "
                android:textSize="@dimen/text_counter_size"
                />

            <TextView
                android:layout_width="@dimen/text_counter_width"
                android:layout_height="wrap_content"
                android:id="@+id/item_ticket_price"
                android:text="    "
                android:textSize="@dimen/text_counter_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/button_green"
            android:gravity="center">

            <Button
                android:layout_width="@dimen/button_counter_width"
                android:layout_height="match_parent"
                android:id="@+id/item_ticket_minus_btn"
                android:text="-"
                android:textColor="@color/white"
                android:background="@drawable/button_green_bg"/>

            <TextView
                android:layout_width="@dimen/counter_value_width"
                android:layout_height="wrap_content"
                android:id="@+id/item_ticket_nb_purchases"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/text_counter_size"/>

            <Button
                android:layout_width="@dimen/button_counter_width"
                android:layout_height="match_parent"
                android:id="@+id/item_ticket_plus_btn"
                android:text="+"
                android:textColor="@color/white"
                android:background="@drawable/button_green_bg"/>

        </LinearLayout>

</LinearLayout>